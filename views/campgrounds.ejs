<% include partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcom to YelpCamp Baby!!!</h1>
        <p>Come and check out our selection of Campgrounds</p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground!</a>
        </p>
      </div>
    </header>

    <div class="row text-center">
      <% campgrounds.forEach(function(camp) { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= camp.image %>" >
          </div>
            <div class="caption">
              <h4> <%= camp.name %> </h4>
            </div>
        </div>
      <% }) %>
    </div>

  </div>

<% include partials/footer %>